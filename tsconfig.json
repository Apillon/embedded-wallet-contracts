{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "Node16",
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "composite": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true
  },
}
